<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!--        Vista formulario      -->
    <record id="product_template_form_view_extend" model="ir.ui.view">
      <field name="name">product_template_form_view_extend</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view" />
      <field name="arch" type="xml">
        <!--         smart button           -->
        <xpath expr="//field[@name='value_ids']" position="after">
          <field name="attribute_type" optional="show" />
        </xpath>
      </field>
    </record>

    <record id="product_template_only_form_view_inherit_product_template" model="ir.ui.view">
      <field name="name">product.template.view.form.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='categ_id']" position="after">
          <field name="category_code" />
          <field name="product_class_id" />
          <field name="product_class_code" />
        </xpath>
        <xpath expr="//page[@name='variants']" position="replace">
          <page name="brands_materials" string="Brands and Materials">
            <separator string="Brands" />
            <field name="product_brand_ids" widget="one2many">
              <tree editable="bottom">
                <field name="name" />
                <field name="code" />
              </tree>
            </field>
            <separator string="Materials" />
            <field name="product_material_ids" widget="one2many">
              <tree editable="bottom">
                <field name="name" />
                <field name="code" />
              </tree>
            </field>
          </page>
        </xpath>
      </field>
    </record>

  </data>
</odoo>